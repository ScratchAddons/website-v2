{{- $pctx := . -}}
{{- if .IsHome -}}{{ $pctx = .Site }}{{- end -}}
{{- $pages := slice -}}
{{- if or $.IsHome $.IsSection -}}
{{- $pages = $pctx.RegularPages -}}
{{- else -}}
{{- $pages = $pctx.Pages -}}
{{- end -}}
{{- $limit := .Site.Config.Services.RSS.Limit -}}
{{- if ge $limit 1 -}}
{{- $pages = $pages | first $limit -}}
{{- end -}}
{{- printf "<?xml version=\"1.0\" encoding=\"utf-8\" standalone=\"yes\"?>" | safeHTML }}
<rss version="2.0" xmlns:atom="http://www.w3.org/2005/Atom">
	<channel>
		<title>{{ T ( $.Param "section_site_name" ) }}</title>
		<link>{{ .Permalink }}</link>
		<description>{{ T "Global.RSSDescription" ( dict "SiteName" ( T ( $.Param "section_site_name" ) ) ) }}</description>
		<generator>Hugo -- gohugo.io</generator>
		{{ with .Site.LanguageCode }}<language>{{.}}</language>{{end}}
		<copyright>{{ T "Footer.Legal.Copyright" ( dict "Year" .Site.Params.copyright_year "Copyleft" "Â©" ) }}</copyright>
		{{ if not .Date.IsZero }}<lastBuildDate>{{ .Date.Format "Mon, 02 Jan 2006 15:04:05 -0700" | safeHTML }}</lastBuildDate>{{ end }}
		{{- with .OutputFormats.Get "RSS" -}}
		{{ printf "<atom:link href=%q rel=\"self\" type=%q />" .Permalink .MediaType | safeHTML }}
		{{- end -}}
		{{ range $pages }}
		<item>
		<title>{{ .Title }}</title>
		<link>{{ .Permalink }}</link>
		<pubDate>{{ .Date.Format "Mon, 02 Jan 2006 15:04:05 -0700" | safeHTML }}</pubDate>
		<guid>{{ .Permalink }}</guid>
		<description>{{ .Summary | html }}</description>
		</item>
		{{ end }}
	</channel>
</rss>